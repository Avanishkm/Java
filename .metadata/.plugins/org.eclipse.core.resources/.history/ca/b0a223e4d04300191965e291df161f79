		Scanner sc = new Scanner(System.in);
		int t=sc.nextInt();
		while(t>0){
		    int n= sc.nextInt();
		    int i;
		    int[] a=new int[n];
		    for(i=0;i<n;i++){
		        a[i]=sc.nextInt();
		    }
		    int minJumps=getMinJumps(a);
		    System.out.println(minJumps);
		    t--;

	}
	
	
